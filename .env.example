# Dolphin Singularity Platform - Environment Configuration
# Copy this file to .env and fill in your actual values

# ============================================
# Anthropic Claude API Configuration (PRIMARY)
# ============================================
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Get your API key from: https://console.anthropic.com/
# This is the main API used for all 10 projects

# ============================================
# Server Configuration
# ============================================
NODE_ENV=development
PORT=3000
ALLOWED_ORIGINS=http://localhost:3000,https://dolphinsingularity.org

# ============================================
# Newsletter Provider Configuration
# ============================================
NEWSLETTER_PROVIDER=buttondown

# Buttondown (https://buttondown.email)
BUTTONDOWN_API_KEY=your_buttondown_api_key_here

# ConvertKit (https://convertkit.com)
CONVERTKIT_API_KEY=your_convertkit_api_key_here
CONVERTKIT_FORM_ID=your_form_id_here

# Mailchimp (https://mailchimp.com)
MAILCHIMP_API_KEY=your_mailchimp_api_key_here
MAILCHIMP_LIST_ID=your_list_id_here

# ============================================
# Legacy AI Chatbot (keeping for backwards compatibility)
# ============================================
AI_PROVIDER=claude
OPENAI_API_KEY=your_openai_api_key_here
CLAUDE_API_KEY=your_claude_api_key_here

# ============================================
# Analytics
# ============================================
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# ============================================
# Feature Flags (Enable/Disable Projects)
# ============================================
ENABLE_KNOWLEDGE_BASE=true
ENABLE_DOLPHIN_GEMMA=false
ENABLE_REAL_TIME_TRANSLATOR=false
ENABLE_LEARNING_PLATFORM=false

# ============================================
# Claude Model Configuration
# ============================================
DEFAULT_MODEL=claude-sonnet-4-20250514
MAX_TOKENS_DEFAULT=4096
ENABLE_CACHE=true
CACHE_TTL_MS=3600000
